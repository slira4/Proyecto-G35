<%= form_with url: '/products', method: :get do |f| %>
  <%= f.label :category, for: :product_category %>
  <%= f.select :category, ["Todos", "Bebestible", "Comestible", "Souvenir"], { include_blank: 'Elige una categorÃ­a' }, {  id: :post_category } %>
